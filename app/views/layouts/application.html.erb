<!DOCTYPE html>
<html>
  <head>
    <title>OurSimpleBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bulma@0.8.0/css/bulma.min.css' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <section class="hero is-primary is-small">
      <!-- Hero head: will stick at the top -->
      <div class="hero-head">
        <nav class="navbar">
          <div class="container">
            <div class="navbar-brand">
              <a class="navbar-item">
                <strong>DoesNothing</strong>
              </a>
              <span class="navbar-burger burger" data-target="navbarMenuHeroA">
                <span></span>
                <span></span>
                <span></span>
              </span>
            </div>
            <div id="navbarMenuHeroA" class="navbar-menu">
              <div class="navbar-end">
                <span class="navbar-item is-active">
                  <%= link_to "Home", home_path %>
                </span>
                <span class="navbar-item">
                  <div class="button is-primary is-inverted">
                    <span><%= link_to "Create Post", new_post_path %></span>
                  </div>
                </span>
              </div>
            </div>
          </div>
        </nav>
      </div>

      <!-- Hero content: will be in the middle -->
      <div class="hero-body">
        <div class="container has-text-centered">
          <h1 class="title">
            Our Simple Blog
          </h1>
        </div>
      </div>
    </section>
      


    <%= yield %>
  </body>
</html>
